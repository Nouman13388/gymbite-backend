{
  "name": "gymbite-backend",
  "version": "1.0.0",
  "description": "Backend for Gymbite application",
  "type": "module",
  "main": "dist/index.js",
  "workspaces": [
    "dashboard"
  ],
  "scripts": {
    "start": "node dist/index.js",
    "start:prod": "node dist/index.js",
    "dev:server": "tsx watch src/index.ts",
    "dev:client": "npm --workspace=dashboard run dev",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build:client": "npm --workspace=dashboard run build",
    "build:server": "tsc",
    "build": "npm run build:client && npm run build:server",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "prisma generate",
    "vercel-build": "prisma generate && npm run build:client && npm run build:server",
    "get-token": "node get-firebase-token.js",
    "auth-utils": "node firebase-auth-utils.js",
    "install:all": "npm install",
    "clean": "npm --workspaces run clean && rm -rf node_modules dist",
    "lint": "npm --workspaces run lint",
    "workspace:dashboard": "npm --workspace=dashboard"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "@prisma/extension-accelerate": "^2.0.2",
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "firebase": "^12.2.1",
    "firebase-admin": "^13.5.0",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/joi": "^17.2.2",
    "@types/node": "^20.11.19",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.3",
    "prisma": "^6.16.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.8.3"
  }
}